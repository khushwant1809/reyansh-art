---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import galleryData from '../data/gallery.json';

const gallery = galleryData as Array<{
  id: string;
  title: string;
  date: string;
  image: string;
  medium?: string;
  description?: string;
}>;
const base = import.meta.env.BASE_URL ?? '/';
const imageUrl = (path: string) => base + path.replace(/^\//, '');
---
<Layout title="Reyansh Shah · Art Portfolio" description="Art portfolio of Reyansh Shah — 4th grader who loves to draw, play Roblox and Minecraft, swim, do Taekwondo, and make music.">
  <section class="hero">
    <h1>Reyansh Shah</h1>
    <p>Art portfolio · 4th grader</p>
  </section>
  <section class="intro" aria-label="About Reyansh">
    <h2>Meet Reyansh</h2>
    <p class="intro-lead">Hi! I'm Reyansh Shah. I'm 9 years old and in 4th grade. This site is my art portfolio — here you can see my drawings and paintings.</p>
    <p>I love to draw and paint. When I'm not creating art, I like playing video games — especially <strong>Roblox</strong> and <strong>Minecraft</strong>. I also enjoy swimming, <strong>Taekwondo</strong>, and <strong>music</strong>. My favorite subject in school is <strong>Math</strong>.</p>
    <p class="intro-cta">Scroll down to explore my portfolio.</p>
  </section>
  <div class="divider" role="presentation"></div>
  <h2 class="gallery-heading">Portfolio</h2>
  <ul class="gallery">
    {gallery.map((item) => (
      <li class="gallery-item">
        <a
          href={imageUrl(item.image)}
          class="gallery-link"
          data-lightbox
          data-title={item.title}
          data-date={item.date}
          data-description={item.description ?? ''}
        >
          <div class="gallery-thumb-wrap">
            <img src={imageUrl(item.image)} alt={item.title} loading="lazy" />
          </div>
          <div class="gallery-caption">
            <h2>{item.title}</h2>
            <span class="date">{item.date}</span>
          </div>
        </a>
      </li>
    ))}
  </ul>
</Layout>
